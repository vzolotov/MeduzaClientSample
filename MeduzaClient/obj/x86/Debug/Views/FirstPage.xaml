<local:BasePage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MeduzaClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:meduzaclient="using:MeduzaClient"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="MeduzaClient.Views.FirstPage"
    mc:Ignorable="d"
    DataContext="{Binding FirstViewModel, Mode=OneWay, Source={StaticResource Locator}}">

    <SplitView x:ConnectionId='1' 
        x:Name="ShellSplitView"
        DisplayMode="CompactOverlay"
        IsPaneOpen="False"
        CompactPaneLength="48"
        OpenPaneLength="200"
        PaneBackground="{ThemeResource SplitViewBackgroundBrush}">
        <SplitView.Pane>
            <StackPanel>
                <!-- Menu (hamburger) button -->
                <RadioButton x:ConnectionId='2' Style="{StaticResource SplitViewMenuButtonStyle}"                             />

                <!-- Home button -->
                <RadioButton Tag="&#xE10F;" Content="Home" Style="{StaticResource SplitViewNavButtonStyle}" IsChecked="True" >
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:InvokeCommandAction Command="{Binding GotoHomeCommand}"/>
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </RadioButton>
            </StackPanel>
        </SplitView.Pane>
        <Frame/>
    </SplitView>
</local:BasePage>

